set number
set relativenumber
set ruler
set cmdheight=1
syntax enable
set nocompatible
filetype plugin indent on
set shiftwidth=4
set softtabstop=4
set tabstop=4
set expandtab
set smartindent
set cursorline
highlight CursorLine ctermbg=black ctermfg=white cterm=bold
let mapleader = " "
nmap <leader>cd :Ex<cr>
nmap <leader>s :w!<cr>
nmap <leader>q :q!<cr>
