/* MACOS SPOTLIGHT LIKE DARK THEME FOR ROFI  */
/* Author: Newman Sanchez (https://github.com/newmanls) */
@import '~/.config/rofi/colors.rasi'
* {
    font:   "JetBrainsMono Nerd Font Propo 12";

    bg0:    #242424E6;
    bg1:    #7E7E7E80;
    bg2:    #0860f2E6;

    fg0:    #DEDEDE;
    fg1:    #FFFFFF;
    fg2:    #DEDEDE80;

    background-color:   transparent;
    text-color:         @primary;
    margin:     0;
    padding:    0;
    spacing:    0;
}

window {
    background-color:   @surface;

    location:       center;
    width:          640;
    border-radius:  20;
}

inputbar {
    font:       "JetBrainsMono Nerd Font Propo 20";
    padding:    12px;
    spacing:    12px;
    children:   [entry];
}

icon-search, entry, element-icon, element-text {
    vertical-align: 0.5;
}

entry {
    font:   inherit;

    placeholder         : "Search";
    placeholder-color   : @inverse-primary;
}

message {
    border:             2px 0 0;
    border-color:       @on-surface;
    background-color:   @surface;
}

textbox {
    padding:    8px 24px;
}

listview {
    lines:      10;
    columns:    1;

    fixed-height:   true;
    border:         2px 0 0;
    border-color:   @inverse-primary;
}

element {
    padding:            8px 16px;
    spacing:            16px;
    background-color:   @surface;
}

element normal active {
    text-color: @inverse-primary;
}

element alternate active {
    text-color: @secondary;
}

element selected normal, element selected active {
    background-color:   @inverse-primary;
    text-color:         @primary;
}

element-icon {
    size:   1em;
}

element-text {
    text-color: inherit;
}
