/* ROUNDED THEME FOR ROFI */
/* Author: Newman Sanchez (https://github.com/newmanls) */
* {
    font:   "JetBrainsMono Nerd Font Propo 12";

    background-color:   transparent;
    text-color:         white;

    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

window {
    location:       center;
    width:          35%;
    border-radius:  0px;

    background-color: rgba(0,0,0,0.7);
}

mainbox {
    padding:    12px;
    border-radius: 0px;

}

inputbar {
    background-color: rgba(0,0,0,0.7);
    border-color:       white;

    border:         2px;
    border-radius:  0px;

    padding:    8px 16px;
    spacing:    8px;
    children:   [entry];
}

prompt {
    text-color: white;
}

entry {
    placeholder:        "Search";
    placeholder-color:  white;
}

message {
    margin:             12px 0 0;
    background-color:   black;
}

textbox {
    padding:    8px 24px;
}

listview {
    background-color:   transparent;

    margin:     12px 0 0;
    lines:      8;
    columns:    1;

    fixed-height: false;
}

element {
    padding:        8px 16px;
    spacing:        8px;
}

element normal active {
    text-color: white;
}

element alternate active {
    text-color: white;
}

element selected normal, element selected active {
    background-color:   white;
    text-color: black;
}

element-icon {
    size:           1em;
    vertical-align: 0.5;
}

element-text {
    text-color: inherit;
}
