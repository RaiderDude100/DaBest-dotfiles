{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#24252A",
                "text": "#FCF7EE",
                "text.muted": "#CAC6BE",
                "text.placeholder": "#B0ADA7",
                "text.disabled": "#97948F",
                "text.accent": "#FEA183",

                // Icon colors - match text hierarchy
                "icon": "#FCF7EE",
                "icon.muted": "#CAC6BE",
                "icon.disabled": "#97948F",
                "icon.placeholder": "#B0ADA7",
                "icon.accent": "#FEA183",

                // Border colors - subtle but visible
                "border": "#65635F",
                "border.variant": "#4C4A47",
                "border.focused": "#FEA183",
                "border.selected": "#FEA183",
                "border.transparent": "#00000000",
                "border.disabled": "#323130",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#24252A",
                "elevated_surface.background": "#3A3B3F",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#3A3938",
                "element.active": "#573B34",
                "element.selected": "#48322B",
                "element.disabled": "#2F3035",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1D1C1C",
                "ghost_element.active": "#3A3938",
                "ghost_element.selected": "#2C1E1A",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#66453C",

                // Application frame elements
                "status_bar.background": "#2F3035",
                "title_bar.background": "#24252A",
                "title_bar.inactive_background": "#2B2C30",
                "toolbar.background": "#24252A",

                // Side panels
                "panel.background": "#24252A",
                "panel.focused_border": "#FEA183",

                // Editor panes
                "pane.focused_border": "#FEA183",
                "pane_group.border": "#65635F",

                // Tab bar and tabs
                "tab_bar.background": "#2F3035",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#24252A",

                // Main editor area
                "editor.background": "#24252A",
                "editor.foreground": "#FCF7EE",
                "editor.gutter.background": "#24252A",
                "editor.subheader.background": "#2F3035",
                "editor.active_line.background": "#1D1C1C",
                "editor.highlighted_line.background": "#36242A",
                "editor.line_number": "#97948F",
                "editor.active_line_number": "#FCF7EE",
                "editor.invisible": "#7E7C77",
                "editor.wrap_guide": "#65635F",
                "editor.active_wrap_guide": "#97948F",
                "editor.indent_guide": "#65635F",
                "editor.indent_guide_active": "#97948F",
                "editor.document_highlight.read_background": "#442D34",
                "editor.document_highlight.write_background": "#221726",
                "editor.document_highlight.bracket_background": "#48322B",

                // Integrated terminal
                "terminal.background": "#24252A",
                "terminal.foreground": "#FCF7EE",
                "terminal.bright_foreground": "#FCF8F0",
                "terminal.dim_foreground": "#CAC6BE",
                "terminal.ansi.background": "#24252A",
                "terminal.ansi.black": "#4A4A51",
                "terminal.ansi.red": "#66376E",
                "terminal.ansi.green": "#A5648F",
                "terminal.ansi.yellow": "#EC8FA7",
                "terminal.ansi.blue": "#FEA183",
                "terminal.ansi.magenta": "#F6D9E9",
                "terminal.ansi.cyan": "#F7E9CE",
                "terminal.ansi.white": "#F3ECDE",
                "terminal.ansi.bright_black": "#AAA59B",
                "terminal.ansi.bright_red": "#66376E",
                "terminal.ansi.bright_green": "#A5648F",
                "terminal.ansi.bright_yellow": "#EC8FA7",
                "terminal.ansi.bright_blue": "#FEA183",
                "terminal.ansi.bright_magenta": "#F6D9E9",
                "terminal.ansi.bright_cyan": "#F7E9CE",
                "terminal.ansi.bright_white": "#F3ECDE",

                // Search functionality
                "search.match_background": "#6D4853",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7E7C77",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B0ADA7",

                // Status indicators - success, warning, error, info
                "success": "#A5648F",
                "success.background": "#32222E",
                "success.border": "#A5648F",

                "warning": "#EC8FA7",
                "warning.background": "#442D34",
                "warning.border": "#EC8FA7",

                "error": "#66376E",
                "error.background": "#221726",
                "error.border": "#66376E",

                "info": "#FEA183",
                "info.background": "#48322B",
                "info.border": "#FEA183",

                "hint": "#CAC6BE",
                "hint.background": "#2B2B2A",
                "hint.border": "#CAC6BE",

                // Git status colors
                "created": "#A5648F",
                "created.background": "#32222E",
                "created.border": "#A5648F",

                "modified": "#EC8FA7",
                "modified.background": "#442D34",
                "modified.border": "#EC8FA7",

                "deleted": "#66376E",
                "deleted.background": "#221726",
                "deleted.border": "#66376E",

                "renamed": "#FEA183",
                "renamed.background": "#48322B",
                "renamed.border": "#FEA183",

                "conflict": "#F6D9E9",
                "conflict.background": "#464045",
                "conflict.border": "#F6D9E9",

                "ignored": "#B0ADA7",
                "ignored.background": "#1D1C1C",
                "ignored.border": "#B0ADA7",

                "hidden": "#97948F",
                "hidden.background": "transparent",
                "hidden.border": "#97948F",

                "predictive": "#B0ADA7",
                "predictive.background": "#1D1C1C",
                "predictive.border": "#B0ADA7",

                "unreachable": "#7E7C77",
                "unreachable.background": "#2B2C30",
                "unreachable.border": "#7E7C77",

                // Link styling
                "link_text.hover": "#FEAA8F",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CAC6BE",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E3DED6",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#66376E"
                    },

                    // Strings
                    "string": {
                        "color": "#A5648F"
                    },
                    "string.escape": {
                        "color": "#F7E9CE"
                    },
                    "string.regex": {
                        "color": "#F7E9CE"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#EC8FA7"
                    },
                    "constant": {
                        "color": "#EC8FA7"
                    },
                    "boolean": {
                        "color": "#F6D9E9"
                    },

                    // Functions
                    "function": {
                        "color": "#FEA183"
                    },
                    "constructor": {
                        "color": "#FEA183"
                    },

                    // Types
                    "type": {
                        "color": "#F6D9E9"
                    },
                    "enum": {
                        "color": "#F6D9E9"
                    },

                    // Variables
                    "variable": {
                        "color": "#FCF7EE"
                    },
                    "variable.special": {
                        "color": "#F6D9E9"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#FEA183"
                    },
                    "attribute": {
                        "color": "#EC8FA7"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#F7E9CE"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E3DED6"
                    },
                    "punctuation.bracket": {
                        "color": "#FCF7EE"
                    },
                    "punctuation.delimiter": {
                        "color": "#E3DED6"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#66376E"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#FEA183"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#A5648F"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#FEA183",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#FEA183",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#F7E9CE"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FCF7EE"
                    },
                    "preproc": {
                        "color": "#66376E"
                    },
                    "primary": {
                        "color": "#FCF7EE"
                    },
                    "variant": {
                        "color": "#F6D9E9"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CAC6BE",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B0ADA7",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#FEA183",
                        "background": "#FEA183",
                        "selection": "#66453C"
                    },
                    {
                        "cursor": "#A5648F",
                        "background": "#A5648F",
                        "selection": "#463040"
                    },
                    {
                        "cursor": "#EC8FA7",
                        "background": "#EC8FA7",
                        "selection": "#5F3F49"
                    },
                    {
                        "cursor": "#F6D9E9",
                        "background": "#F6D9E9",
                        "selection": "#635961"
                    }
                ]
            }
        }
    ]
}
