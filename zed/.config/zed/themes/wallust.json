{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#131311",
                "text": "#FFE8DB",
                "text.muted": "#CCBAAF",
                "text.placeholder": "#B2A299",
                "text.disabled": "#998B83",
                "text.accent": "#D8775F",

                // Icon colors - match text hierarchy
                "icon": "#FFE8DB",
                "icon.muted": "#CCBAAF",
                "icon.disabled": "#998B83",
                "icon.placeholder": "#B2A299",
                "icon.accent": "#D8775F",

                // Border colors - subtle but visible
                "border": "#665D58",
                "border.variant": "#4C4642",
                "border.focused": "#D8775F",
                "border.selected": "#D8775F",
                "border.transparent": "#00000000",
                "border.disabled": "#332E2C",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#131311",
                "elevated_surface.background": "#2B2B29",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#37322F",
                "element.active": "#472922",
                "element.selected": "#3B221C",
                "element.disabled": "#1F1F1D",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1B1918",
                "ghost_element.active": "#37322F",
                "ghost_element.selected": "#231511",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#533027",

                // Application frame elements
                "status_bar.background": "#1F1F1D",
                "title_bar.background": "#131311",
                "title_bar.inactive_background": "#1A1A18",
                "toolbar.background": "#131311",

                // Side panels
                "panel.background": "#131311",
                "panel.focused_border": "#D8775F",

                // Editor panes
                "pane.focused_border": "#D8775F",
                "pane_group.border": "#665D58",

                // Tab bar and tabs
                "tab_bar.background": "#1F1F1D",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#131311",

                // Main editor area
                "editor.background": "#131311",
                "editor.foreground": "#FFE8DB",
                "editor.gutter.background": "#131311",
                "editor.subheader.background": "#1F1F1D",
                "editor.active_line.background": "#1B1918",
                "editor.highlighted_line.background": "#0E221A",
                "editor.line_number": "#998B83",
                "editor.active_line_number": "#FFE8DB",
                "editor.invisible": "#80746E",
                "editor.wrap_guide": "#665D58",
                "editor.active_wrap_guide": "#998B83",
                "editor.indent_guide": "#665D58",
                "editor.indent_guide_active": "#998B83",
                "editor.document_highlight.read_background": "#122A20",
                "editor.document_highlight.write_background": "#1E201B",
                "editor.document_highlight.bracket_background": "#3B221C",

                // Integrated terminal
                "terminal.background": "#131311",
                "terminal.foreground": "#FFE8DB",
                "terminal.bright_foreground": "#FFEADF",
                "terminal.dim_foreground": "#CCBAAF",
                "terminal.ansi.background": "#131311",
                "terminal.ansi.black": "#3B3B39",
                "terminal.ansi.red": "#636E59",
                "terminal.ansi.green": "#697180",
                "terminal.ansi.yellow": "#349571",
                "terminal.ansi.blue": "#D8775F",
                "terminal.ansi.magenta": "#9B9F81",
                "terminal.ansi.cyan": "#FFBD99",
                "terminal.ansi.white": "#F6D6C4",
                "terminal.ansi.bright_black": "#AD9589",
                "terminal.ansi.bright_red": "#636E59",
                "terminal.ansi.bright_green": "#697180",
                "terminal.ansi.bright_yellow": "#349571",
                "terminal.ansi.bright_blue": "#D8775F",
                "terminal.ansi.bright_magenta": "#9B9F81",
                "terminal.ansi.bright_cyan": "#FFBD99",
                "terminal.ansi.bright_white": "#F6D6C4",

                // Search functionality
                "search.match_background": "#1D4334",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#80746E",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B2A299",

                // Status indicators - success, warning, error, info
                "success": "#697180",
                "success.background": "#1F2124",
                "success.border": "#697180",

                "warning": "#349571",
                "warning.background": "#122A20",
                "warning.border": "#349571",

                "error": "#636E59",
                "error.background": "#1E201B",
                "error.border": "#636E59",

                "info": "#D8775F",
                "info.background": "#3B221C",
                "info.border": "#D8775F",

                "hint": "#CCBAAF",
                "hint.background": "#292623",
                "hint.border": "#CCBAAF",

                // Git status colors
                "created": "#697180",
                "created.background": "#1F2124",
                "created.border": "#697180",

                "modified": "#349571",
                "modified.background": "#122A20",
                "modified.border": "#349571",

                "deleted": "#636E59",
                "deleted.background": "#1E201B",
                "deleted.border": "#636E59",

                "renamed": "#D8775F",
                "renamed.background": "#3B221C",
                "renamed.border": "#D8775F",

                "conflict": "#9B9F81",
                "conflict.background": "#2C2C24",
                "conflict.border": "#9B9F81",

                "ignored": "#B2A299",
                "ignored.background": "#1B1918",
                "ignored.border": "#B2A299",

                "hidden": "#998B83",
                "hidden.background": "transparent",
                "hidden.border": "#998B83",

                "predictive": "#B2A299",
                "predictive.background": "#1B1918",
                "predictive.border": "#B2A299",

                "unreachable": "#80746E",
                "unreachable.background": "#1A1A18",
                "unreachable.border": "#80746E",

                // Link styling
                "link_text.hover": "#DC856F",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CCBAAF",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E6D1C5",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#636E59"
                    },

                    // Strings
                    "string": {
                        "color": "#697180"
                    },
                    "string.escape": {
                        "color": "#FFBD99"
                    },
                    "string.regex": {
                        "color": "#FFBD99"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#349571"
                    },
                    "constant": {
                        "color": "#349571"
                    },
                    "boolean": {
                        "color": "#9B9F81"
                    },

                    // Functions
                    "function": {
                        "color": "#D8775F"
                    },
                    "constructor": {
                        "color": "#D8775F"
                    },

                    // Types
                    "type": {
                        "color": "#9B9F81"
                    },
                    "enum": {
                        "color": "#9B9F81"
                    },

                    // Variables
                    "variable": {
                        "color": "#FFE8DB"
                    },
                    "variable.special": {
                        "color": "#9B9F81"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#D8775F"
                    },
                    "attribute": {
                        "color": "#349571"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#FFBD99"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E6D1C5"
                    },
                    "punctuation.bracket": {
                        "color": "#FFE8DB"
                    },
                    "punctuation.delimiter": {
                        "color": "#E6D1C5"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#636E59"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#D8775F"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#697180"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#D8775F",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#D8775F",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#FFBD99"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FFE8DB"
                    },
                    "preproc": {
                        "color": "#636E59"
                    },
                    "primary": {
                        "color": "#FFE8DB"
                    },
                    "variant": {
                        "color": "#9B9F81"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CCBAAF",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B2A299",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#D8775F",
                        "background": "#D8775F",
                        "selection": "#533027"
                    },
                    {
                        "cursor": "#697180",
                        "background": "#697180",
                        "selection": "#2B2E32"
                    },
                    {
                        "cursor": "#349571",
                        "background": "#349571",
                        "selection": "#193B2E"
                    },
                    {
                        "cursor": "#9B9F81",
                        "background": "#9B9F81",
                        "selection": "#3D3E33"
                    }
                ]
            }
        }
    ]
}
