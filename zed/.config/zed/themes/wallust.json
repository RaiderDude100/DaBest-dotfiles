{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#1C1D21",
                "text": "#EBF4EF",
                "text.muted": "#BCC3BF",
                "text.placeholder": "#A5ABA7",
                "text.disabled": "#8D928F",
                "text.accent": "#8EA0AA",

                // Icon colors - match text hierarchy
                "icon": "#EBF4EF",
                "icon.muted": "#BCC3BF",
                "icon.disabled": "#8D928F",
                "icon.placeholder": "#A5ABA7",
                "icon.accent": "#8EA0AA",

                // Border colors - subtle but visible
                "border": "#5E6260",
                "border.variant": "#464948",
                "border.focused": "#8EA0AA",
                "border.selected": "#8EA0AA",
                "border.transparent": "#00000000",
                "border.disabled": "#2F3130",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#1C1D21",
                "elevated_surface.background": "#333437",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#353736",
                "element.active": "#33383D",
                "element.selected": "#2A2F33",
                "element.disabled": "#27282C",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1A1B1B",
                "ghost_element.active": "#353736",
                "ghost_element.selected": "#1A1C1F",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#3C4247",

                // Application frame elements
                "status_bar.background": "#27282C",
                "title_bar.background": "#1C1D21",
                "title_bar.inactive_background": "#232428",
                "toolbar.background": "#1C1D21",

                // Side panels
                "panel.background": "#1C1D21",
                "panel.focused_border": "#8EA0AA",

                // Editor panes
                "pane.focused_border": "#8EA0AA",
                "pane_group.border": "#5E6260",

                // Tab bar and tabs
                "tab_bar.background": "#27282C",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#1C1D21",

                // Main editor area
                "editor.background": "#1C1D21",
                "editor.foreground": "#EBF4EF",
                "editor.gutter.background": "#1C1D21",
                "editor.subheader.background": "#27282C",
                "editor.active_line.background": "#1A1B1B",
                "editor.highlighted_line.background": "#1E2520",
                "editor.line_number": "#8D928F",
                "editor.active_line_number": "#EBF4EF",
                "editor.invisible": "#767A78",
                "editor.wrap_guide": "#5E6260",
                "editor.active_wrap_guide": "#8D928F",
                "editor.indent_guide": "#5E6260",
                "editor.indent_guide_active": "#8D928F",
                "editor.document_highlight.read_background": "#262E28",
                "editor.document_highlight.write_background": "#262810",
                "editor.document_highlight.bracket_background": "#2A2F33",

                // Integrated terminal
                "terminal.background": "#1C1D21",
                "terminal.foreground": "#EBF4EF",
                "terminal.bright_foreground": "#EDF5F1",
                "terminal.dim_foreground": "#BCC3BF",
                "terminal.ansi.background": "#1C1D21",
                "terminal.ansi.black": "#434348",
                "terminal.ansi.red": "#7A851E",
                "terminal.ansi.green": "#988483",
                "terminal.ansi.yellow": "#7A9C7F",
                "terminal.ansi.blue": "#8EA0AA",
                "terminal.ansi.magenta": "#BFAE89",
                "terminal.ansi.cyan": "#C6E0D1",
                "terminal.ansi.white": "#DAE7E0",
                "terminal.ansi.bright_black": "#99A29C",
                "terminal.ansi.bright_red": "#7A851E",
                "terminal.ansi.bright_green": "#988483",
                "terminal.ansi.bright_yellow": "#7A9C7F",
                "terminal.ansi.bright_blue": "#8EA0AA",
                "terminal.ansi.bright_magenta": "#BFAE89",
                "terminal.ansi.bright_cyan": "#C6E0D1",
                "terminal.ansi.bright_white": "#DAE7E0",

                // Search functionality
                "search.match_background": "#3C4A40",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#767A78",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#A5ABA7",

                // Status indicators - success, warning, error, info
                "success": "#988483",
                "success.background": "#2D2829",
                "success.border": "#988483",

                "warning": "#7A9C7F",
                "warning.background": "#262E28",
                "warning.border": "#7A9C7F",

                "error": "#7A851E",
                "error.background": "#262810",
                "error.border": "#7A851E",

                "info": "#8EA0AA",
                "info.background": "#2A2F33",
                "info.border": "#8EA0AA",

                "hint": "#BCC3BF",
                "hint.background": "#282929",
                "hint.border": "#BCC3BF",

                // Git status colors
                "created": "#988483",
                "created.background": "#2D2829",
                "created.border": "#988483",

                "modified": "#7A9C7F",
                "modified.background": "#262E28",
                "modified.border": "#7A9C7F",

                "deleted": "#7A851E",
                "deleted.background": "#262810",
                "deleted.border": "#7A851E",

                "renamed": "#8EA0AA",
                "renamed.background": "#2A2F33",
                "renamed.border": "#8EA0AA",

                "conflict": "#BFAE89",
                "conflict.background": "#37332A",
                "conflict.border": "#BFAE89",

                "ignored": "#A5ABA7",
                "ignored.background": "#1A1B1B",
                "ignored.border": "#A5ABA7",

                "hidden": "#8D928F",
                "hidden.background": "transparent",
                "hidden.border": "#8D928F",

                "predictive": "#A5ABA7",
                "predictive.background": "#1A1B1B",
                "predictive.border": "#A5ABA7",

                "unreachable": "#767A78",
                "unreachable.background": "#232428",
                "unreachable.border": "#767A78",

                // Link styling
                "link_text.hover": "#99AAB3",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#BCC3BF",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#D4DCD7",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#7A851E"
                    },

                    // Strings
                    "string": {
                        "color": "#988483"
                    },
                    "string.escape": {
                        "color": "#C6E0D1"
                    },
                    "string.regex": {
                        "color": "#C6E0D1"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#7A9C7F"
                    },
                    "constant": {
                        "color": "#7A9C7F"
                    },
                    "boolean": {
                        "color": "#BFAE89"
                    },

                    // Functions
                    "function": {
                        "color": "#8EA0AA"
                    },
                    "constructor": {
                        "color": "#8EA0AA"
                    },

                    // Types
                    "type": {
                        "color": "#BFAE89"
                    },
                    "enum": {
                        "color": "#BFAE89"
                    },

                    // Variables
                    "variable": {
                        "color": "#EBF4EF"
                    },
                    "variable.special": {
                        "color": "#BFAE89"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#8EA0AA"
                    },
                    "attribute": {
                        "color": "#7A9C7F"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#C6E0D1"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#D4DCD7"
                    },
                    "punctuation.bracket": {
                        "color": "#EBF4EF"
                    },
                    "punctuation.delimiter": {
                        "color": "#D4DCD7"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#7A851E"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#8EA0AA"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#988483"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#8EA0AA",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#8EA0AA",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#C6E0D1"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#EBF4EF"
                    },
                    "preproc": {
                        "color": "#7A851E"
                    },
                    "primary": {
                        "color": "#EBF4EF"
                    },
                    "variant": {
                        "color": "#BFAE89"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#BCC3BF",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#A5ABA7",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#8EA0AA",
                        "background": "#8EA0AA",
                        "selection": "#3C4247"
                    },
                    {
                        "cursor": "#988483",
                        "background": "#988483",
                        "selection": "#3F3839"
                    },
                    {
                        "cursor": "#7A9C7F",
                        "background": "#7A9C7F",
                        "selection": "#344038"
                    },
                    {
                        "cursor": "#BFAE89",
                        "background": "#BFAE89",
                        "selection": "#4D473C"
                    }
                ]
            }
        }
    ]
}
