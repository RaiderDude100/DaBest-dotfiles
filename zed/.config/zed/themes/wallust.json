{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#302B33",
                "text": "#FDF9EB",
                "text.muted": "#CAC7BC",
                "text.placeholder": "#B1AEA5",
                "text.disabled": "#98958D",
                "text.accent": "#75C9A8",

                // Icon colors - match text hierarchy
                "icon": "#FDF9EB",
                "icon.muted": "#CAC7BC",
                "icon.disabled": "#98958D",
                "icon.placeholder": "#B1AEA5",
                "icon.accent": "#75C9A8",

                // Border colors - subtle but visible
                "border": "#65645E",
                "border.variant": "#4C4B46",
                "border.focused": "#75C9A8",
                "border.selected": "#75C9A8",
                "border.transparent": "#00000000",
                "border.disabled": "#33322F",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#302B33",
                "elevated_surface.background": "#454047",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#3C3A39",
                "element.active": "#314942",
                "element.selected": "#293D37",
                "element.disabled": "#3A363D",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1E1D1D",
                "ghost_element.active": "#3C3A39",
                "ghost_element.selected": "#192521",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#39554D",

                // Application frame elements
                "status_bar.background": "#3A363D",
                "title_bar.background": "#302B33",
                "title_bar.inactive_background": "#363139",
                "toolbar.background": "#302B33",

                // Side panels
                "panel.background": "#302B33",
                "panel.focused_border": "#75C9A8",

                // Editor panes
                "pane.focused_border": "#75C9A8",
                "pane_group.border": "#65645E",

                // Tab bar and tabs
                "tab_bar.background": "#3A363D",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#302B33",

                // Main editor area
                "editor.background": "#302B33",
                "editor.foreground": "#FDF9EB",
                "editor.gutter.background": "#302B33",
                "editor.subheader.background": "#3A363D",
                "editor.active_line.background": "#1E1D1D",
                "editor.highlighted_line.background": "#2B2A26",
                "editor.line_number": "#98958D",
                "editor.active_line_number": "#FDF9EB",
                "editor.invisible": "#7F7D76",
                "editor.wrap_guide": "#65645E",
                "editor.active_wrap_guide": "#98958D",
                "editor.indent_guide": "#65645E",
                "editor.indent_guide_active": "#98958D",
                "editor.document_highlight.read_background": "#363530",
                "editor.document_highlight.write_background": "#103031",
                "editor.document_highlight.bracket_background": "#293D37",

                // Integrated terminal
                "terminal.background": "#302B33",
                "terminal.foreground": "#FDF9EB",
                "terminal.bright_foreground": "#FDFAED",
                "terminal.dim_foreground": "#CAC7BC",
                "terminal.ansi.background": "#302B33",
                "terminal.ansi.black": "#555058",
                "terminal.ansi.red": "#109591",
                "terminal.ansi.green": "#FA7243",
                "terminal.ansi.yellow": "#A7A88D",
                "terminal.ansi.blue": "#75C9A8",
                "terminal.ansi.magenta": "#DFB293",
                "terminal.ansi.cyan": "#F9EEC6",
                "terminal.ansi.white": "#F4EEDA",
                "terminal.ansi.bright_black": "#AAA799",
                "terminal.ansi.bright_red": "#109591",
                "terminal.ansi.bright_green": "#FA7243",
                "terminal.ansi.bright_yellow": "#A7A88D",
                "terminal.ansi.bright_blue": "#75C9A8",
                "terminal.ansi.bright_magenta": "#DFB293",
                "terminal.ansi.bright_cyan": "#F9EEC6",
                "terminal.ansi.bright_white": "#F4EEDA",

                // Search functionality
                "search.match_background": "#56554D",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7F7D76",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#B1AEA5",

                // Status indicators - success, warning, error, info
                "success": "#FA7243",
                "success.background": "#4A271E",
                "success.border": "#FA7243",

                "warning": "#A7A88D",
                "warning.background": "#363530",
                "warning.border": "#A7A88D",

                "error": "#109591",
                "error.background": "#103031",
                "error.border": "#109591",

                "info": "#75C9A8",
                "info.background": "#293D37",
                "info.border": "#75C9A8",

                "hint": "#CAC7BC",
                "hint.background": "#2D2C2B",
                "hint.border": "#CAC7BC",

                // Git status colors
                "created": "#FA7243",
                "created.background": "#4A271E",
                "created.border": "#FA7243",

                "modified": "#A7A88D",
                "modified.background": "#363530",
                "modified.border": "#A7A88D",

                "deleted": "#109591",
                "deleted.background": "#103031",
                "deleted.border": "#109591",

                "renamed": "#75C9A8",
                "renamed.background": "#293D37",
                "renamed.border": "#75C9A8",

                "conflict": "#DFB293",
                "conflict.background": "#443732",
                "conflict.border": "#DFB293",

                "ignored": "#B1AEA5",
                "ignored.background": "#1E1D1D",
                "ignored.border": "#B1AEA5",

                "hidden": "#98958D",
                "hidden.background": "transparent",
                "hidden.border": "#98958D",

                "predictive": "#B1AEA5",
                "predictive.background": "#1E1D1D",
                "predictive.border": "#B1AEA5",

                "unreachable": "#7F7D76",
                "unreachable.background": "#363139",
                "unreachable.border": "#7F7D76",

                // Link styling
                "link_text.hover": "#83CEB1",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#CAC7BC",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#E4E0D4",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
                        "color": "#109591"
                    },

                    // Strings
                    "string": {
                        "color": "#FA7243"
                    },
                    "string.escape": {
                        "color": "#F9EEC6"
                    },
                    "string.regex": {
                        "color": "#F9EEC6"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#A7A88D"
                    },
                    "constant": {
                        "color": "#A7A88D"
                    },
                    "boolean": {
                        "color": "#DFB293"
                    },

                    // Functions
                    "function": {
                        "color": "#75C9A8"
                    },
                    "constructor": {
                        "color": "#75C9A8"
                    },

                    // Types
                    "type": {
                        "color": "#DFB293"
                    },
                    "enum": {
                        "color": "#DFB293"
                    },

                    // Variables
                    "variable": {
                        "color": "#FDF9EB"
                    },
                    "variable.special": {
                        "color": "#DFB293"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#75C9A8"
                    },
                    "attribute": {
                        "color": "#A7A88D"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#F9EEC6"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#E4E0D4"
                    },
                    "punctuation.bracket": {
                        "color": "#FDF9EB"
                    },
                    "punctuation.delimiter": {
                        "color": "#E4E0D4"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#109591"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#75C9A8"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#FA7243"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#75C9A8",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#75C9A8",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#F9EEC6"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#FDF9EB"
                    },
                    "preproc": {
                        "color": "#109591"
                    },
                    "primary": {
                        "color": "#FDF9EB"
                    },
                    "variant": {
                        "color": "#DFB293"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#CAC7BC",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#B1AEA5",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#75C9A8",
                        "background": "#75C9A8",
                        "selection": "#39554D"
                    },
                    {
                        "cursor": "#FA7243",
                        "background": "#FA7243",
                        "selection": "#683729"
                    },
                    {
                        "cursor": "#A7A88D",
                        "background": "#A7A88D",
                        "selection": "#4C4A43"
                    },
                    {
                        "cursor": "#DFB293",
                        "background": "#DFB293",
                        "selection": "#5F4D45"
                    }
                ]
            }
        }
    ]
}
